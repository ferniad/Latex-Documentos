@article{MoralesTamayoYoandrys2025AdId,
abstract = {Este estudio presenta las aplicaciones del Internet de las Cosas (IoT) en la industria electromecánica, centrándose en la recolección, análisis y monitoreo de datos en tiempo real. A través de una revisión sistemática basada en la metodología de Kitchenham, se analizaron 187 artículos, de los cuales 27 cumplieron los criterios de inclusión. El análisis reveló una distribución significativa en tres áreas principales: mantenimiento predictivo (46.52%), gestión energética (31.02%) y gestión de inventarios (22.46%). Las implementaciones de IoT demostraron mejoras sustanciales en la eficiencia operacional (85%), reducción de costos (72%) y sostenibilidad (68%). En el mantenimiento predictivo, se logró una precisión del 92% en la predicción de fallos y una reducción del 37% en tiempos de inactividad. Los sistemas de gestión energética alcanzaron una reducción del 28% en consumo energético y 32% en emisiones de CO2. En gestión de inventarios, se obtuvo un 95% de precisión y una reducción del 34% en costos de almacenamiento. Las proyecciones indican un crecimiento significativo, esperando alcanzar 32,100 millones de dispositivos IoT para 2030. Estos resultados evidencian que la tecnología IoT no solo es una inversión en sostenibilidad sino también una herramienta fundamental para optimizar costos operativos y mejorar la rentabilidad en la industria electromecánica.},
author = {Morales Tamayo, Yoandrys},
issn = {3028-8800},
journal = {Revista Ingenio global},
language = {eng},
number = {1},
title = {Aplicaciones del Internet de las cosas (IoT) en la Industria Electromecánica para la recolección, análisis y monitoreo en tiempo real},
volume = {4},
year = {2025},
}
@article{RomeroMacíasJavierVidal2025Adid,
abstract = {La eficiencia energética es un pilar fundamental para la sostenibilidad global, especialmente en entornos residenciales. Este artículo analiza las aplicaciones del Internet de las Cosas (IoT) en la optimización de la eficiencia energética en hogares inteligentes, utilizando una revisión sistemática de la literatura basada en la metodología prisma. Los resultados destacan tecnologías IoT clave como sensores inteligentes, algoritmos predictivos y plataformas de gestión energética, que permiten una significativa reducción del consumo energético, contribuyendo a la sostenibilidad ambiental. Sin embargo, persisten desafíos como la interoperabilidad entre dispositivos, los altos costos de implementación y las preocupaciones de seguridad y privacidad. Este estudio ofrece una visión integral del estado del arte, tendencias tecnológicas y barreras, proponiendo soluciones prácticas para maximizar el impacto positivo del IoT en la gestión energética residencial. Se concluye que la adopción de estas tecnologías puede transformar la sostenibilidad energética a nivel global, siempre que se superen las limitaciones actuales.},
author = {Romero Macías, Javier Vidal and Loor Navia, Eddy Alejandro},
issn = {2806-5905},
journal = {Revista Científica Multidisciplinar G-nerando},
language = {eng},
number = {1},
title = {Aplicaciones de internet de las cosas (IoT) en la optimización de la eficiencia energética en entornos residenciales: Internet of things (IoT) applications in energy efficiency optimization in residential environments},
volume = {6},
year = {2025},
}

